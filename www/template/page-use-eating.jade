div(id="eating" flex layout="vertical" layout-fill)

  .pane-area(layout="horizontal" layout-align="center")

    div(flex="5")
    .rcs-pane.ordered.material-whiteframe-z3(flex="55" layout="vertical")

      .pane-header(layout="horizontal")
        div(flex="40" ng-click="clickRefresh()")
          span.colored [{{ordered.length}}]
          span 已点菜品
          span.fa.fa-refresh(ng-class="{'fa-spin':refreshing == true}")
        div(flex)
        material-button.material-button-raised.material-theme-light(
          ng-click="clickGoToOrder()")
          | 添加

      ion-content
        material-list
          material-item(ng-repeat="ordered in orderedGroup | orderBy:['type'] track by $index")
            .material-left {{ordered.type}}
            .material-tile-content
              h2 <b>{{ordered.name}}</b>
            .material-tile-right x{{ordered.count}}

    div(flex="5")
    .rcs-pane.call.material-whiteframe-z3(flex="30" layout="vertical")
      .pane-header(layout="horizontal")
        span 服务

      div(layout="vertical" layout-align="space-around center" layout-fill)
        material-button.material-button-raised
          h2
            b.fa.fa-coffee
            | 呼叫加水
        material-button.material-button-raised
          h2
            b.fa.fa-user
            | 叫服务员
        material-button.material-button-raised
          h2
            b.fa.fa-cny
            | 自助结帐

    div(flex="5")
